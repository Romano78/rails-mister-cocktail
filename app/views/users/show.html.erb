<h2>Welcolme</h2>

<% if current_user %>
  <%= current_user.name %>
  <%= current_user.last_name %>

  <%= link_to 'Edit Profile', edit_user_registration_path  %>
<% end %>

    <div class="cocktail-list">
        <% @cocktails.each do |cocktail| %>
            <div class="cocktail-list-container">
                <h3><%= cocktail.name %></h3>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Ratione totam maiores nesciunt perspiciatis aliquam officia, accusantium maxime aliquid facilis dignissimos, autem, id praesentium vel. Blanditiis.</p>
                <div class="cocktail-footer">
                    <%= link_to 'About', cocktail_path(cocktail)  %>
                    <%= link_to 'Edit', edit_cocktail_path(cocktail) %>
                    <button id="sweet-alert-demo" class="delete-button"><i class="far fa-trash-alt"></i></button>
                    <%= link_to "", cocktail_path(cocktail), method: :delete, id: "delete-link", class: "hidden" %>
                </div>
            </div>
        <% end %>
    </div>